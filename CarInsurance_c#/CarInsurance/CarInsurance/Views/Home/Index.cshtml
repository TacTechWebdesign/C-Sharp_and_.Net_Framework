@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Car Insurance Quotes</h1>
    <p class="lead">Fill out our brief survey to get a quote today!</p>
</div>
<div class="card-body">
    @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
    {


        <div class="row no-gutters">

            <div class="form-group col-md-12">
                <label for="exampleFormControlSelect2">What is your first name?</label>
                <input name="FirstName" type="text" class="form-control" placeholder="John/Jane" />
            </div>

            <div class="form-group col-md-12">
                <label for="exampleFormControlSelect2">What is your last name?</label>
                <input name="LastName" type="text" class="form-control" placeholder="Doe" />
            </div>

            <div class="form-group col-md-12">
                <label for="exampleFormControlSelect2">What is your email?</label>
                <input name="EmailAddress" type="email" class="form-control" placeholder="example@email.com" />
            </div>

            <div class="form-group col-md-12">
                <label for="exampleFormControlSelect2">What year were you born?</label>
                <input name="DOB" type="text" class="form-control" placeholder="1985" />
            </div>

            <label class="form-group col-md-12" for="exampleFormControlSelect2">Have you ever received a DUI?</label>
            <div class="form-group col-md-12">
                <input name="DUI" type="text" class="form-control" placeholder="Yes/No?" />
            </div>

            <label class="form-group col-md-12" for="exampleFormControlSelect2">How many speeding tickets do you have?</label>
            <div class="form-group col-md-12">
                <input name="SpdTicket" type="number" min="0" class="form-control" />
            </div>

            <label class="form-group col-md-12" for="exampleFormControlSelect2">What kind of coverage would you like?</label>
            <div class="form-group col-md-12">
                <input name="Coverage" type="text" class="form-control" placeholder="Full Coverage or Liability?" />
            </div>

            <div class="form-group col-md-12">
                <label for="exampleFormControlSelect2">What is the year of your car?</label>
                <input name="carYear" type="text" class="form-control" placeholder="2005" />
            </div>

            <div class="form-group col-md-12">
                <label for="exampleFormControlSelect2">What is the make of your car?</label>
                <input name="carMake" type="text" class="form-control" placeholder="Porsche" />
            </div>

            <div class="form-group col-md-12">
                <label for="exampleFormControlSelect2">What is the model of your car?</label>
                <input name="carModel" type="text" class="form-control" placeholder="911 Carrera" />
            </div>
            <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </div>
    }
</div>